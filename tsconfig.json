{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "esModuleInterop": true,
        // "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        // "moduleResolution": "node",
        // "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": false,
        "sourceMap": true,
        "removeComments": true,
        "declaration": true,
        "outDir": "out",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src/**/*.mts", "generators/**/*.mts"],
    "exclude": ["node_modules", "tests/**/*.ts", "generators/*/templates"]
}
